convolution.

\subsection{Truncated Skewed Laplace distribution} \label{subsec:trunskewlap}

\subsubsection{Derivation of the density of $\epsilon$} \label{subsubsec:dentrunkskewlap}

We have

$$f(u) =\frac{1+\lambda}{\sigma_u\left(
2\lambda+1\right)}\left\{2\exp{\left(-\frac{u}{\sigma_u}\right)}-
\exp{\left(-\frac{\left(1+\lambda\right)u}{\sigma_u}\right)}\right\}$$

with $\lambda > 0$

then

$$f(u,v) = \frac{1+\lambda}{\sigma_u\left(2\lambda+1\right)}\left\{2\exp{
\left(-\frac{u}{\sigma_u}\right)}-\exp{\left(-\frac{\left(1+\lambda\right)u}{
\sigma_u}\right)}\right\}\frac{1}{\sigma_v}\phi\left(\frac{v}{\sigma_v}\right)$$

Then

$$f(u,\epsilon +Su) = \frac{1+\lambda}{\sigma_u\left(2\lambda+1\right)}\left\{
2\exp{\left(-\frac{u}{\sigma_u}\right)}-\exp{\left(-\frac{\left(
1+\lambda\right)u}{\sigma_u}\right)}\right\}\frac{1}{\sigma_v}\phi\left(\frac{
\epsilon +Su}{\sigma_v}\right)$$

We have:

$$\frac{2u}{\sigma_u} + \left(\frac{\epsilon +Su}{\sigma_v}\right)^2=\left[
\frac{u}{\sigma_v} + \left(\frac{\sigma_v}{\sigma_u}+\frac{S\epsilon}{\sigma_v}
\right)\right]^2 - \left(\frac{\sigma_v^2}{\sigma_u^2}+\frac{2S\epsilon}{
\sigma_u}\right)$$

and 

$$\frac{2\left(1+\lambda\right)u}{\sigma_u} + \left(\frac{\epsilon +Su}{
\sigma_v}\right)^2=\left[\frac{u}{\sigma_v} + \left(\left(1+\lambda\right)
\frac{\sigma_v}{\sigma_u}+\frac{S\epsilon}{\sigma_v}\right)\right]^2 - 
\left(1+\lambda\right)\left(\left(1+\lambda\right)\frac{\sigma_v^2}{
\sigma_u^2}+\frac{2S\epsilon}{\sigma_u}\right)$$

We then have


\begin{align*}
f(u,\epsilon) & = \frac{1+\lambda}{\sigma_u\sigma_v\left(2\lambda+1\right)}
\left\{2\exp{\left(\frac{\sigma_v^2}{2\sigma_u^2}+\frac{S\epsilon}{\sigma_u}
\right)}\phi\left[\frac{u}{\sigma_v} + \left(\frac{\sigma_v}{\sigma_u}+
\frac{S\epsilon}{\sigma_v}\right)\right]- \right. \\
& \quad \left. \exp{\left(1+\lambda\right)\left(\left(1+\lambda\right)\frac{
\sigma_v^2}{2\sigma_u^2}+\frac{S\epsilon}{\sigma_u}\right)}\phi\left[\frac{u}{
\sigma_v} + \left(\left(1+\lambda\right)\frac{\sigma_v}{\sigma_u}+\frac{
S\epsilon}{\sigma_v}\right)\right]\right\}
\end{align*}

Therefore

\begin{align*}
f(\epsilon) & =\frac{1+\lambda}{\sigma_u\left(2\lambda+1\right)}\left\{2\exp{
\left(\frac{\sigma_v^2}{2\sigma_u^2}+\frac{S\epsilon}{\sigma_u}\right)}\int_{
\frac{\sigma_v}{\sigma_u}+\frac{S\epsilon}{\sigma_v}}^\infty\phi\left(
\tilde{u}\right)d\tilde{u} - \right. \\
& \quad \left.\exp{\left[\left(1+\lambda\right)\left(\left(1+\lambda\right)
\frac{\sigma_v^2}{2\sigma_u^2}+\frac{S\epsilon}{\sigma_u}\right)\right]}\int_{
\left(1+\lambda\right)\frac{\sigma_v}{\sigma_u}+\frac{S\epsilon}{
\sigma_v}}^\infty\phi\left(\tilde{u}\right)d\tilde{u}\right\}
\end{align*}


Solving the previous integrals yields

\begin{align*}
f(\epsilon) & =\frac{1+\lambda}{\sigma_u\left(2\lambda+1\right)}\left\{
2\exp{\left(\frac{\sigma_v^2}{2\sigma_u^2}+\frac{S\epsilon}{\sigma_u}\right)}
\Phi\left(-\frac{\sigma_v}{\sigma_u}-\frac{S\epsilon}{\sigma_v}\right) -\right. \\
& \quad \left.\exp{\left(\frac{\left(1+\lambda\right)^2\sigma_v^2}{
2\sigma_u^2}+\frac{S\epsilon\left(1+\lambda\right)}{\sigma_u}\right)}
\Phi\left(-\frac{\left(1+\lambda\right)\sigma_v}{\sigma_u}-\frac{
S\epsilon}{\sigma_v}\right)\right\}
\end{align*}

We can also write

\begin{equation}\label{eq:1.8.1}
f(\epsilon) = \frac{1+\lambda}{\sigma_u\left(2\lambda+1\right)}\left[
2\exp{\left(A\right)}\Phi\left(a\right)-\exp{\left(B\right)}\Phi\left(
b\right)\right]
\end{equation}

where

$$A = \left(\frac{\sigma_v^2}{2\sigma_u^2}+\frac{S\epsilon}{\sigma_u}\right)$$

$$B = \left(\frac{\left(1+\lambda\right)^2\sigma_v^2}{2\sigma_u^2}+\frac{
S\epsilon\left(1+\lambda\right)}{\sigma_u}\right)$$

$$\mu_* = -\frac{\sigma_v^2}{\sigma_u}-S\epsilon$$

